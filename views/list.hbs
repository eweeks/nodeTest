      <div class="checkbox">
            <label><input class="filter tags" type="checkbox" id="filter-bird" data-value="bird">Birds</label>
      </div>
      <div class="checkbox">
            <label><input class="filter tags" type="checkbox" id="filter-wildlife" data-value="wildlife">Wildlife</label>
      </div>
      <div class="checkbox">
            <label><input class="filter tags" type="checkbox" id="filter-season" data-value="summer">Summer</label>
      </div>
      <div class="checkbox">
            <label><input class="filter tags" type="checkbox" id="filter-park" data-value="grand teton">Grand Teton</label>
